


<div class="row">
    <div class="col-3 col-md-4 bg-white">
        <%= render "layouts/profile_bar" %>
        <ul class="nav nav-pills ms-4 mt-3 mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Matches</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-messages" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Messages</button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade ms-2  show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
                <%= render "browse/matches" %>
            </div>
            <div class="tab-pane ms-2 fade" id="pills-messages" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                <div class="col">
                    <p>No messages to display.</p>
                </div>
            </div>
        </div>


    </div>
    <div class="col-9 col-md-8"><%= render 'browse/matches' %>
        <ul id="slides">
            <% @users.each_with_index do |user, i| %>
                <div class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
                    <li>
                        <div class="image-carousel">
                        </div>
                        <div class="user-details">
                            <span class="user-name"><%= user.first_name%></span>, 31<br />
                            <i class="bi bi-mortarboard-fill me-1"></i> Job /Studies<br />
                            <i class="bi bi-geo-alt-fill me-2"></i> Location
                        </div>
                    </li>
                </div>
            <% end %>
        </ul>

        <div id="slide-controls">
            <span id="decline"><i class="bi bi-x-circle-fill" style="font-size: 2rem"></i></span>
            <span id="approve"><i class="bi bi-heart-fill" style="font-size: 2rem"></i></span>
        </div>
    </div>
</div>



